{% extends '/base.html.twig' %}

{% block body%}
<div class="person_info">
    <span style="font-size: 24px; color: #634a87; margin-bottom: 10px;">Detail Information for Donation {{ donation.id }}</span>
    <table>
        <tr>
            <th>id</th>
            <td>{{ donation.id }}</td>
        </tr>
        <tr>
            <th>institution</th>
            <td>{{ donation.projectName.institution }}</td>
        </tr>
        <tr>
            <th>department</th>
            <td>{{ donation.projectName.department }}</td>
        </tr>
        <tr>
            <th>project name</th>
            <td>{{ donation.projectName.name }}</td>
        </tr>
        <tr>
            <th>name</th>
            <td>{{ donation.name }}</td>
        </tr>
        <tr>
            <th>person_id</th>
            <td>{{ donation.personId }}</td>
        </tr>
        <tr>
            <th>email</th>
            <td>{{ donation.email }}</td>
        </tr>
        <tr>
            <th>phone</th>
            <td>{{ donation.phone }}</td>
        </tr>
        <tr>
            <th>city</th>
            <td>{{ donation.city }}</td>
        </tr>
        <tr>
            <th>district</th>
            <td>{{ donation.district }}</td>
        </tr>
        <tr>
            <th>address</th>
            <td>{{ donation.address }}</td>
        </tr>
        <tr>
            <th>zipcode</th>
            <td>{{ donation.zipcode }}</td>
        </tr>
        <tr>
            <th>identity_type</th>
            <td>{{ donation.identityType }}</td>
        </tr>
        <tr>
            <th>anonymous</th>
            <td>{% if donation.anonymous %}
                    true
                {% else %}
                    false
                {% endif %}
            </td>

        </tr>
        <tr>
            <th>title</th>
            <td>{{ donation.title }}</td>
        </tr>
        <tr>
            <th>pay</th>
            <td>{{ donation.pay }}</td>
        </tr>
        <tr>
            <th>status</th>
            <td>{{ donation.status }}</td>
        </tr>
        <tr>
            <th>type</th>
            <td>{{ donation.type }}</td>
        </tr>
        <tr>
            <th>description</th>
            <td>{{ donation.description }}</td>
        </tr>
        <tr>
            <th>date</th>
            <td>{{ donation.date|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>paydate</th>
            <td>{{ donation.paydate is empty ? '' : donation.paydate|date('Y-m-d') }}</td>
        </tr>
    </table>
     <a href="{{ path('donation_all') }}">回到 Donation List</a>
</div>

{% endblock %}
